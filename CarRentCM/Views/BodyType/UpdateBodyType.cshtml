@model CarRentCM.Features.CQRS.Results.BodyTypeResults.GetBodyTypeByIdQueryResult
@{
    ViewData["Title"] = "UpdateBodyType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Gövde Tipi</h1>

<h4>Gövde Tipi Güncelleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="BodyTypeId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Gövde Tipi</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BodyTypeList">Listeye Dön</a>
</div>